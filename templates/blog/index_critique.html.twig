{% extends 'base.html.twig' %}

{% block title %}Critique
{% endblock %}

{% block body %}
	<section class="critique">


		{% for  critique in critiques %}
			<div class="jumbotron">
				<h1>{{critique.title}}</h1>
				<p class="lead">Ecrit le
					{{critique.createdAt | date("d/m/Y")}}
					à
					{{critique.createdAt | date("H:i")}}
					dans la catégorie
					{{  critique.category.title }}</p>
				<figure>
					<figcaption class="note">{{ critique.note | raw}}/5</figcaption>
					<img class="w-75" src="{{critique.image}}">
				</figure>

				<hr class="my-4">
				<p>{{critique.content | striptags | truncate (550, true) | raw}}</p>
				<p class="lead">
					<a class="btn btn-primary btn-lg" href="{{path('blog_show_critique',{'id':critique.id})}}" role="button">Lire la suite</a>
				</p>
			</div>
		{% endfor %}

	</section>
	{{ knp_pagination_render(critiques ) }}
{% endblock %}

